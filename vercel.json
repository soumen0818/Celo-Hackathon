{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": {
      "description": "Supabase project URL (optional - has fallback)",
      "required": false
    },
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
      "description": "Supabase anonymous/public API key (optional - has fallback)",
      "required": false
    },
    "GEMINI_API_KEY": {
      "description": "Google Gemini API key for AI scoring",
      "required": false
    },
    "GITHUB_TOKEN": {
      "description": "GitHub personal access token",
      "required": false
    },
    "NEXT_PUBLIC_CELO_NETWORK": {
      "description": "Celo network (alfajores or celo)",
      "required": false
    },
    "NEXT_PUBLIC_CONTRACT_ADDRESS": {
      "description": "Deployed GrantDistribution contract address",
      "required": false
    },
    "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID": {
      "description": "WalletConnect Cloud project ID",
      "required": false
    },
    "NEXT_PUBLIC_OWNER_ADDRESS": {
      "description": "Admin wallet address",
      "required": false
    }
  }
}
